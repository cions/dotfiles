snippet filepath
options word
	`expand('%:p')`${0}

snippet filename
options word
	`expand('%:p:t')`${0}

snippet datetime
alias   dt
options word
	`strftime('%F %T')`${0}

snippet datetime-iso8601
alias   diso
options word
	`strftime('%FT%T')`${0}

snippet date
options word
	`strftime('%F')`${0}

snippet time
options word
	`strftime('%T')`${0}

snippet lastmod
	Last Modified: `strftime('%FT%T')`${0}
