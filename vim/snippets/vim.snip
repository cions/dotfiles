snippet plugin
options head
	" ${2:#:description}
	" Maintainer: ${3:cions <gh.cions@gmail.com>}
	" License:    ${4:MIT}

	if exists('g:loaded_${1}')
	  finish
	endif
	let g:loaded_$1 = 1

	let s:save_cpo = &cpo
	set cpo&vim

	${0:TARGET}

	let &cpo = s:save_cpo
	unlet s:save_cpo

snippet function
options head
	function! ${1:#:funcname}(${2:#:args})
		${0:TARGET}
	endfunction

snippet augroup
options head
	augroup ${1:#:name}
		autocmd!
		${0:TARGET}
	augroup END
