# vim: set ft=zsh:

emulate -L zsh

local rootdir candidates selected

if (( ! ${+commands[fzy]} )) return

rootdir=${HOME}/src
if [[ ! -d ${rootdir} ]] return

candidates="$(find ${rootdir} -type d -mindepth 3 -maxdepth 3 -printf '%P\n')"
if [[ -z ${candidates} ]] return

echoti cud1
selected="$(print -r -- ${candidates} | fzy)"
echoti cuu1
zle reset-prompt
if [[ -z ${selected} ]] return

BUFFER="cd ${(q)rootdir}/${(q)selected}"
zle accept-line
