# vim: set ft=zsh:

emulate -L zsh

local file selected

if (( ! ${+commands[fzy]} )) return
zstyle -s ':chpwd:*' recent-dirs-file file || return
if [[ ! -f ${file} ]] return

echoti cud1
selected="$(print -rl -- "${(@fQ)$(<${file})}" | fzy)"
echoti cuu1
zle reset-prompt

if [[ -n ${selected} ]] {
    if [[ -n ${BUFFER} ]] zle push-line
    BUFFER="cd ${(q)selected}"
    CURSOR=${#BUFFER}
    zle accept-line
}
