#autoload

emulate -L zsh
setopt extended_glob

local selected

if (( ! ${+commands[fzy]} )) return 1
if [[ ${PWD} == "/" ]] return 1

echoti cud1
selected="$(print -rl -- (../)#(od:A) | fzy)"
echoti cuu1
zle reset-prompt

if [[ -z ${selected} ]] return 1

if [[ -n ${BUFFER} ]] zle push-line
BUFFER="cd ${(q)selected}"
CURSOR=${#BUFFER}
zle accept-line
return 0
